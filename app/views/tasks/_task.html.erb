<%= form_for task, remote: true do |f| %>
  <%= f.check_box :done %>
  <%= f.label task.content %>
  <%= task.due_date %>
  <%= link_to 'Show', task %>
  <%= link_to 'Edit', edit_task_path(task) %>
  <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %>
  <%= f.submit "update" %>
<% end %>